    <nav class="glass-effect sticky top-0 z-50 border-b border-custom">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-8">
                    <h1 class="text-2xl font-bold gradient-text">ByteBlog</h1>
                    <div class="hidden md:flex space-x-8">
                        <a href="http://localhost:4789/" class="text-muted hover:text-primary font-medium transition-colors">Home</a>
                        <a href="http://localhost:4789/#home-content-grid" class="text-muted hover:text-primary font-medium transition-colors">Articles</a>
                        <a href="#" class="text-muted hover:text-primary font-medium transition-colors">About</a>
                        <a href="#" class="text-muted hover:text-primary font-medium transition-colors">Contact</a>
                    </div>
                </div>
                <button class="bg-gradient-to-r from-gray-900 to-gray-700 dark:from-gray-100 dark:to-gray-300 text-white dark:text-gray-900 px-6 py-2 rounded-full font-medium hover:from-gray-800 hover:to-gray-600 dark:hover:from-gray-200 dark:hover:to-gray-400">
                    Subscribe
                </button>
            </div>
        </div>
    </nav>