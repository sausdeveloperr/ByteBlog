<%- include('partials/header.ejs') %>

    <!-- Hero Section -->
    <section id="hero-section" class="py-20 px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-5xl lg:text-6xl font-bold gradient-text mb-6 p-4 leading-tight">
                The Art of Minimalist Design in Digital Products
            </h2>
            
            <div class="flex items-center justify-between pest-red mb-3">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full">
                    <img src="images/authors/Sarah Chen.jpg" alt="" class="rounded-full" loading="lazy"></div>
                    <div>
                        <p class="font-medium text-primary">Sarah Chen</p>
                        <p class="text-sm text-muted">Dec 15, 2024</p>
                    </div>
                </div>
                <button class="text-muted hover:text-secondary transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                    </svg>
                </button>
            </div>
            <div class="flex items-center space-x-3 text-gray-300 text-sm pest-red">
                <!-- Avatar -->
                <img src="/path/to/avatar.jpg" alt="Author" 
                    class="w-8 h-8 rounded-full object-cover" />

                <!-- Name -->
                <span class="font-medium">Ernesto Dibia</span>

                <!-- Follow Button -->
                <button 
                    class="px-3 py-1 rounded-full border border-gray-500 text-gray-200 
                        hover:bg-gray-700 transition">
                    Follow
                </button>

                <!-- Dot Separator -->
                <span class="mx-1">•</span>

                <!-- Read Time -->
                <span>4 min read</span>

                <!-- Dot Separator -->
                <span class="mx-1">•</span>

                <!-- Date -->
                <span>4 days ago</span>
            </div>
        </div>
    </section>

    <!-- Medium values
        h1 {font-size: 42px;}
        p {font-size: 20px;}
    -->

    <!-- Main Content -->
    <main id="post-content-grid" class=" max-w-7xl mx-auto px-6 lg:px-8 pb-20">
        <div class="grid lg:grid-cols-4 gap-8  pest-red">
            <!-- Article Grid -->
            <div class="lg:col-span-3 pest-gre">
                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Article -->
                    <article class="md:col-span-2 bg-card rounded-2xl premium-shadow card-hover overflow-hidden">
                        <div class="h-64 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/20">
                            <img src="images/articles/Canva Art of Minimalist Design.png" class="w-full h-full object-cover" alt="Art of Minimalist Design" loading="lazy">
                        </div>
                        <div class="p-8">
                            <div class="flex items-center space-x-4 mb-4">
                                <span class="bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 px-3 py-1 rounded-full text-sm font-medium">Featured</span>
                                <span class="text-muted text-sm">5 min read</span>
                            </div>
                            <h3 class="text-2xl font-bold text-primary mb-3 leading-tight">
                                The Art of Minimalist Design in Digital Products
                            </h3>
                            <p class="text-secondary mb-4 leading-relaxed">
                                Exploring how less can truly be more when crafting user experiences that resonate with modern audiences.
                            </p>
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full">
                                    <img src="images/authors/Sarah Chen.jpg" alt="" class="rounded-full" loading="lazy"></div>
                                    <div>
                                        <p class="font-medium text-primary">Sarah Chen</p>
                                        <p class="text-sm text-muted">Dec 15, 2024</p>
                                    </div>
                                </div>
                                <button class="text-muted hover:text-secondary transition-colors">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </article>
                </div>  
                <!-- Load More -->
                <div class="text-center mt-12">
                    <button class="border border-custom text-secondary px-8 py-3 rounded-full font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300">
                        Load More Articles
                    </button>
                </div>
            </div>

            <%- include('partials/sidepane.ejs') %>
        </div>
    </main>

<%- include('partials/footer.ejs') %>