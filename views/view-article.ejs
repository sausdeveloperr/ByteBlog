<%- include('partials/header.ejs') %>

    <!-- Hero Section -->
    <section id="hero-section" class="  py-6 px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-5xl lg:text-6xl font-bold gradient-text mb-6 p-4 leading-tight">
                The Art of Minimalist Design in Digital Products
            </h2>
            <p class="text-secondary mb-4 leading-relaxed">
                Explore how less can truly be more when crafting user experiences that resonate with modern audiences.
            </p>
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                <!-- Left side (profile + meta info) -->
                <div class="sm:mx-auto">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
                        <!-- Avatar + name + follow -->
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full overflow-hidden">
                                <img src="images/authors/Sarah Chen.jpg" alt="picture of Sarah Chen" class="rounded-full w-full h-full object-cover" loading="lazy">
                            </div>
                            <p class="font-medium text-primary">Sarah Chen</p>
                            <button class="border border-custom text-secondary text-sm px-2 py-1 rounded-full font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300">
                                Follow
                            </button>
                        </div>
                        <!-- Meta info (Featured, read time, date) -->
                        <div class="flex items-center gap-5 mt-3 sm:mt-0">
                            <span class="bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 px-3 py-1 rounded-full text-sm font-medium">Featured</span>
                            <span class="text-muted text-sm">5 min read</span>
                            <p class="text-sm text-muted">Dec 15, 2024</p>
                            <!-- Right side (bookmark button) -->
                            <button class="text-muted hover:text-secondary transition-colors ml-auto mr-5">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main id="post-content-grid" class=" max-w-7xl mx-auto px-6 lg:px-8 pb-20">
        <!-- Article and Sidebar Grid -->
        <div class="grid lg:grid-cols-4 gap-8">

            <!-- article wrapper's container -->
            <div class="lg:col-span-3">

                <!-- article wrapper -->
                <div class="grid md:grid-cols-2 gap-8 rounded-2xl">
                    <!-- Article -->
                    <article class="md:col-span-2 bg-card overflow-hidden rounded-2xl">
                        <!-- image -->
                        <div class="mx-auto bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/20">
                            <img src="images/articles/Canva Art of Minimalist Design.png" class="w-full h-full object-cover" alt="Art of Minimalist Design" loading="lazy">
                        </div>
                        
                        <!-- text -->
                        <div>
                            <!-- add ejs output here -->
                             <%- mockPosts[4].content %>
                        </div>
                    </article>
                </div>  
            </div>
            <%- include('partials/sidepane.ejs') %>
        </div>

        <!-- suggested articles -->
        <div class="mt-8">
            <!-- Articles Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- other articles -->
                <article class="bg-card rounded-xl premium-shadow card-hover overflow-hidden cursor-pointer h-auto">
                    <div class="w-full h-48 lg:h-32">
                        <img src="images/articles/Typography That Speaks.jpg" class="w-full h-full object-cover" alt="Typography That Speaks" loading="lazy">
                    </div>
                    <div class="p-6 lg:p-4">
                        <div class="flex items-center space-x-2 mb-2 lg:mb-1">
                            <span class="bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 px-2 py-1 rounded-full text-xs font-medium">Design</span>
                            <span class="text-muted text-xs">3 min read</span>
                        </div>
                        <h3 class="text-xl lg:text-lg font-bold text-primary mb-2 lg:mb-1 leading-tight">
                            Typography That Speaks
                        </h3>
                        <p class="text-secondary text-xs mb-2 lg:mb-1 leading-relaxed line-clamp-2">
                            How choosing the right fonts can transform your message and connect with readers.
                        </p>
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 lg:w-6 lg:h-6 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full">
                                <img src="images/authors/Alex.jpg" alt="" class="rounded-full" loading="lazy">
                            </div>
                            <div>
                                <p class="font-medium text-primary text-xs">Alex Rivera</p>
                                <p class="text-xs lg:text-xxs text-muted">Dec 12, 2024</p>
                            </div>
                        </div>
                    </div>
                </article>

                <article class="bg-card rounded-xl premium-shadow card-hover overflow-hidden cursor-pointer h-auto">
                    <div class="w-full h-48 lg:h-32">
                        <img src="images/articles/Future of web interfaces.jpg" class="w-full h-full object-cover" alt="Future of web interfaces" loading="lazy">
                    </div>
                    <div class="p-6 lg:p-4">
                        <div class="flex items-center space-x-2 mb-2 lg:mb-1">
                            <span class="bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 px-2 py-1 rounded-full text-xs font-medium">Tech</span>
                            <span class="text-muted text-xs">7 min read</span>
                        </div>
                        <h3 class="text-xl lg:text-lg font-bold text-primary mb-2 lg:mb-1 leading-tight">
                            Future of Web Interfaces
                        </h3>
                        <p class="text-secondary text-xs mb-2 lg:mb-1 leading-relaxed line-clamp-2">
                            Exploring emerging trends that will shape how we interact with digital experiences.
                        </p>
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 lg:w-6 lg:h-6 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full">
                                <img src="images/authors/Maya patel.jpg" alt="" class="rounded-full" loading="lazy">
                            </div>
                            <div>
                                <p class="font-medium text-primary text-xs">Maya Patel</p>
                                <p class="text-xs lg:text-xxs text-muted">Dec 10, 2024</p>
                            </div>
                        </div>
                    </div>
                </article>

                <article class="bg-card rounded-xl premium-shadow card-hover overflow-hidden cursor-pointer h-auto">
                    <div class="w-full h-48 lg:h-32">
                        <img src="images/articles/Digital Minimalism.jpg" class="w-full h-full object-cover" alt="Digital Minimalism" loading="lazy">
                    </div>
                    <div class="p-6 lg:p-4">
                        <div class="flex items-center space-x-2 mb-2 lg:mb-1">
                            <span class="bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-300 px-2 py-1 rounded-full text-xs font-medium">Life</span>
                            <span class="text-muted text-xs">4 min read</span>
                        </div>
                        <h3 class="text-xl lg:text-lg font-bold text-primary mb-2 lg:mb-1 leading-tight">
                            Digital Minimalism
                        </h3>
                        <p class="text-secondary text-xs mb-2 lg:mb-1 leading-relaxed line-clamp-2">
                            Finding balance in our hyper-connected world through intentional technology use.
                        </p>
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 lg:w-6 lg:h-6 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full">
                                <img src="images/authors/Jordan Kim.jpg" alt="" class="rounded-full" loading="lazy">
                            </div>
                            <div>
                                <p class="font-medium text-primary text-xs">Jordan Kim</p>
                                <p class="text-xs lg:text-xxs text-muted">Dec 8, 2024</p>
                            </div>
                        </div>
                    </div>
                </article>

                <article class="bg-card rounded-xl premium-shadow card-hover overflow-hidden cursor-pointer h-auto">
                    <div class="w-full h-48 lg:h-32">
                        <img src="images/articles/Color Psychology in Design.jpg" class="w-full h-full object-cover" alt="Color Psychology in Design" loading="lazy">
                    </div>
                    <div class="p-6 lg:p-4">
                        <div class="flex items-center space-x-2 mb-2 lg:mb-1">
                            <span class="bg-rose-100 dark:bg-rose-900/30 text-rose-800 dark:text-rose-300 px-2 py-1 rounded-full text-xs font-medium">Creative</span>
                            <span class="text-muted text-xs">6 min read</span>
                        </div>
                        <h3 class="text-xl lg:text-lg font-bold text-primary mb-2 lg:mb-1 leading-tight">
                            Color Psychology in Design
                        </h3>
                        <p class="text-secondary text-xs mb-2 lg:mb-1 leading-relaxed line-clamp-2">
                            Understanding how colors influence emotions and decision-making in digital spaces.
                        </p>
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 lg:w-6 lg:h-6 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full">
                                <img src="images/authors/Emma.jpg" alt="" class="rounded-full" loading="lazy">
                            </div>
                            <div>
                                <p class="font-medium text-primary text-xs">Emma Thompson</p>
                                <p class="text-xs lg:text-xxs text-muted">Dec 5, 2024</p>
                            </div>
                        </div>
                    </div>
                </article>
            </div>

            <!-- Load More -->
            <div class="text-center mt-12">
                <button onclick="window.location='/all-articles'" class="border border-custom text-secondary px-8 py-3 rounded-full font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300">
                    View other articles
                </button>
            </div>
        </div>
    </main>

<%- include('partials/footer.ejs') %>   